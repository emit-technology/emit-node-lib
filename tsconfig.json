{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": ".code",
    "newLine": "LF",
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "importHelpers": true,
    "declaration": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "noUnusedLocals": true,
    "strict": true,
    "strictNullChecks": true,
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}